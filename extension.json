{
  "displayName": "Pega CDH Connector",
  "name": "pega-customer-decision-hub-connector",
  "iconPath": "resources/icons/pega-logo.svg",
  "version": "1.0.0",
  "description": "Server side extension that allows users to send data to Pega Customer Decision Hub.",
  "author": {
    "name": "Pegasystems",
    "url": "http://pega.com"
  },
  "platform": "edge",
  "viewBasePath": "dist/",
 "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "minLength": 1,
          "pattern": "https?:\\/\\/[-a-zA-Z0-9@:%._+~#=]{1,256}\\.[a-zA-Z0-9()]+\\b([-a-zA-Z0-9()@:%_+.~#?&//=]*)"
        },
        "businessType": {
          "type": "string",
          "minLength": 1,
          "enum": [
            "Financial",
            "Health",
            "Insurance"
          ]
        }
      },
      "additionalProperties": false,
      "required": ["url","businessType"]
    }
  },
  "actions": [

    {
      "displayName": "Send Stream API Event",
      "name": "send-stream-data",
      "libPath": "src/lib/actions/sendStreamData.js",
      "viewPath": "actions/sendStreamData.html",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "minLength": 1
          },
          "eventTime": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": true,
        "required": ["eventName","eventTime"]
      }
    }
  ]
}
